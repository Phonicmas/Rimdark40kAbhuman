<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <AbilityCategoryDef>
    <defName>BEWH_Navigator</defName>
    <displayOrder>1000</displayOrder>
  </AbilityCategoryDef>

  <!-- Expose Warp Eye -->
  <AbilityDef>
    <defName>BEWH_NavigatorExposeWarpEye</defName>
    <label>expose warp eye</label>
    <description>The navigator can open their third eye and gaze upon a victim, all but the strongest will die from looking into the third eye.</description>
    <iconPath>UI/Genes/Placeholder</iconPath>
    <cooldownTicksRange>900000</cooldownTicksRange>
    <aiCanUse>false</aiCanUse>
    <category>BEWH_Navigator</category>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>10</range>
      <warmupTime>0.5</warmupTime>
      <targetParams>
        <canTargetSelf>false</canTargetSelf>
        <canTargetPawns>true</canTargetPawns>
        <canTargetBuildings>false</canTargetBuildings>
        <canTargetMechs>false</canTargetMechs>
        <canTargetAnimals>false</canTargetAnimals>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="Abhuman40k.CompProperties_AbilityWarpEyeGaze">
        <stunnedNotKilledGeneDef>
          <li>BEWH_NavigtorWarpEye</li>
        </stunnedNotKilledGeneDef>
        <stunnedNotKilledPawnKindDef />
      </li>
    </comps>
  </AbilityDef>

  <!-- Warp Travel -->
  <VEF.Abilities.AbilityDef>
    <defName>BEWH_NavigatorWarpTravel</defName>
    <label>warp travel</label>
    <description>The navigator is able to traverse the warp along, however as any warp travel the time it takes may wary wildly</description>
    <iconPath>UI/Genes/Placeholder</iconPath>
    <abilityClass>Abhuman40k.Ability_WarpEyeWarpTravel</abilityClass>
    <cooldownTime>60000</cooldownTime>
    <castTime>625</castTime>
    <range>10.9</range>
    <rangeStatFactors>
      <PsychicSensitivity>1.5</PsychicSensitivity>
    </rangeStatFactors>
    <radius>3.9</radius>
    <targetMode>Tile</targetMode>
    <worldTargeting>true</worldTargeting>
    <needsTicking>true</needsTicking>
    <showGizmoOnWorldView>true</showGizmoOnWorldView>
  </VEF.Abilities.AbilityDef>

  <!-- Assign Bodyguard -->
  <AbilityDef>
    <defName>BEWH_NavigatorAssignBodyguard</defName>
    <label>assign bodyguard</label>
    <description>???</description>
    <iconPath>UI/Genes/Placeholder</iconPath>
    <cooldownTicksRange>1</cooldownTicksRange>
    <jobDef>CastAbilityOnThingMelee</jobDef>
    <stunTargetWhileCasting>True</stunTargetWhileCasting>
    <showPsycastEffects>False</showPsycastEffects>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
    <showWhenDrafted>true</showWhenDrafted>
    <hostile>false</hostile>
    <casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
    <statBases>
      <Ability_Duration>1000</Ability_Duration>
    </statBases>
    <verbProperties>
      <verbClass>Verb_CastAbilityTouch</verbClass>
      <range>-1</range>
      <warmupTime>1</warmupTime>
      <drawAimPie>true</drawAimPie>
      <targetParams>
        <canTargetPawns>true</canTargetPawns>
        <canTargetBuildings>false</canTargetBuildings>
        <canTargetAnimals>false</canTargetAnimals>
        <canTargetMechs>false</canTargetMechs>
        <canTargetBloodfeeders>true</canTargetBloodfeeders>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="Abhuman40k.CompProperties_AbilityGiveBodyguardHediff">
        <hediffDef>BEWH_NavigtorHouseBelisariusBuff</hediffDef>
      </li>
    </comps>
  </AbilityDef>

</Defs>